<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
  <%- include('../partials/header') %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Image</th>

    </tr>
  </thead>
  <tbody>
    <% books.forEach(b => {%>
      <tr>
        <td><%=b.title%></td>
        <td><%=b.author%></td>
        <td><a href="/books/<%= b._id %>"><img src="<%= b.imgURL %>" height="250" width="250"><br>
          <%= b.title %>
        </a></td>
        <!-- <td><a href="/books/<%=b._id%>">Details</a></td> -->
      </tr>
    <% })%>
  </tbody>
</table>



  <%- include('../partials/footer') %>
</body>
</html>
