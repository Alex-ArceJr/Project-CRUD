<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
  <%- include('../partials/header') %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Rating</th>
      <th>Price</th>
      <th>ISBN</th>
    </tr>
  </thead>
  <tbody>
    <% books.forEach(b => {%>
      <tr>
        <td><%=b.title%></td>
        <td><%=b.author%></td>
        <td><%=b.rating%></td>
        <td><%=b.price%></td>
        <td><%=b.isbn%></td>
        <td><a href="/books/<%=b._id%>">Details</a></td>
      </tr>
    <% } )%>
  </tbody>
</table>



  <%- include('../partials/footer') %>
</body>
</html>
